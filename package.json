{
  "name": "grafana-npm",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf dist && yarn build:main",
    "build:main": "tsc -p tsconfig.build.json",
    "lint:raw": "yarn eslint --ext .ts --ext .js --ignore-pattern dist",
    "lint": "yarn lint:raw .",
    "lint-fix": "yarn lint --fix",
    "dev": "yarn ts-node src/index.ts",
    "eslint": "./node_modules/.bin/eslint",
    "prettier": "./node_modules/.bin/prettier",
    "lint-staged": "./node_modules/.bin/lint-staged"
  },
  "devDependencies": {
    "@sofie-automation/code-standard-preset": "^2.4.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.10",
    "@types/pouchdb": "^6.4.0",
    "@types/underscore": "^1.11.4",
    "husky": "^8.0.3",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1",
    "typescript": "~4.9"
  },
  "engines": {
    "node": "^18.15"
  },
  "packageManager": "yarn@3.5.0",
  "dependencies": {
    "@godaddy/terminus": "^4.11.2",
    "express": "^4.18.2",
    "mysql2": "^3.2.0",
    "p-queue": "^7.3.4",
    "pouchdb": "^7.2.2",
    "reissue": "^3.1.0",
    "sequelize": "^6.30.0",
    "underscore": "^1.13.6"
  },
  "lint-staged": {
    "*.{json,md}": [
      "yarn prettier --write"
    ],
    "*.{ts,js}": [
      "yarn lint:raw --fix"
    ]
  }
}
